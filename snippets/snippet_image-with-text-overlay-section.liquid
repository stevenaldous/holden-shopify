{% for block in section.blocks %}

<section class="container">
  <div class="slider flexslider homepage_slider sixteen columns">
    <ul class="slides">
      <li>
        <!-- {% if block.settings.link != blank %}
          <a href="{{ block.settings.link }}">
        {% endif %} -->
        {% if block.settings.textImage != nil %}
          <img  src="{{ block.settings.textImage | img_url: '1200x' }}"
                alt="{{ block.settings.textImage.alt | escape }}"
                class="lazyload transition-in"
                sizes="100vw"
                srcset="{{ block.settings.textImage | img_url: '480x' }} 480w,
                        {{ block.settings.textImage | img_url: '768x' }} 768w,
                        {{ block.settings.textImage | img_url: '1200x' }} 1200w,
                        {{ block.settings.textImage | img_url: '2048x2048' }} 2048w"
                 />
        {% else %}
          {{ 'lifestyle-1' | placeholder_svg_tag: 'placeholder-svg placeholder-svg--banner' }}
        {% endif %}

        {% if block.settings.link != blank %}
          </a>
        {% endif %}
        {% if block.settings.textImage != blank or block.settings.title != blank or block.settings.subtext != blank or block.settings.button_label != blank %}
          <div class="flex-caption">
            <div class="container">
              <div class="columns {% if block.settings.text_position == 'left' %} seven offset-by-one {% elsif block.settings.text_position == 'right' %} seven offset-by-eight {% else %} eight offset-by-four {% endif %} align_{{ block.settings.text_align }}">
                {% if block.settings.textTitle != blank %}
                  <h1 class="headline">
                    {{ block.settings.textTitle | escape }}
                  </h1>
                {% endif %}
                {% if block.settings.textSubTitle != blank %}
                  <div class="subtitle">
                    {{ block.settings.textSubTitle }}
                  </div>
                {% endif %}
<!--                 {% if block.settings.button_label != blank %}
                  <a {% if block.settings.link != blank %}href="{{ block.settings.link }}"{% endif %} class="action_button">
                    {{ block.settings.button_label | escape }}
                  </a>
                {% endif %} -->
              </div>
            </div>
          </div>
        {% endif %}
      </li>
    </ul>
  </div>
</section>



{% endfor %}


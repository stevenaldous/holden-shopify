{% assign instagram_count = section.settings.instagram_count | times: 4 %}
<div class="instagram-feed-wrap container">
  {% if section.settings.instagram_client_id != blank %}
    <div class="section clearfix">
      <div class="sixteen columns">
        <h4 class="title">
          {% if settings.instagram_link != blank %}
            <a href="{{ settings.instagram_link }}" target="_blank">
          {% endif %}
          {{ section.settings.title | escape }}
          {% if settings.instagram_link != blank %}
            </a>
          {% endif %}
        </h4>

      <div id="instafeed" class="js-instafeed" data-client-id="{{ section.settings.instagram_client_id | strip }}" data-count="{{ instagram_count }}"></div>
    </div>
  </div>
  {% else %}
    <div class="section clearfix">
      <div class="sixteen columns">
        <h4 class="title">
          <a href="{{ settings.instagram_link }}" target="_blank">
            {{ section.settings.title | escape }}
          </a>
        </h4>

        <div class="clearfix placeholder-instagram">
          {% for i in (1..instagram_count) %}
            <div class="one-fourth column">
              <a href="#">
                {{ 'image' | placeholder_svg_tag: 'placeholder-svg placeholder-svg--instagram' }}
              </a>
            </div>
          {% endfor %}
        </div>
      </div>
    </div>
  {% endif %}
</div>



{% schema %}
{
  "name": "Instagram feed",
  "class": "instagram-feed-section",
  "settings": [
    {
      "type": "text",
      "id": "instagram_client_id",
      "label": "Instagram Access Token ([?](http:\/\/outofthesandbox.com\/pages\/instagram-access-token))"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Instagram title",
      "default": "Instagram"
    },
    {
      "type": "select",
      "id": "instagram_count",
      "label": "Number of rows",
      "options": [
        {
          "value": "1",
          "label": "1"
        },
        {
          "value": "2",
          "label": "2"
        },
        {
          "value": "3",
          "label": "3"
        },
        {
          "value": "4",
          "label": "4"
        }
      ],
      "default": "1"
    }
  ],
  "presets": [{
    "name": "Instagram feed",
    "category": "Social media",
    "settings": {

    }
  }]
}

{% endschema %}